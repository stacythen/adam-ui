{
  "name": "adam-ui-build",
  "private": true,
  "author": "Stacy Then",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rimraf lib",
    "prebuild": "npm run clean",
    "build": "lerna run tsc && lerna exec --ignore adam-ui-stories -- babel src -d lib --ignore *.test.ts --ignore *.test.tsx",
    "build:watch": "lerna run build && lerna run tsc && lerna exec --parallel --ignore adam-ui-stories -- babel src -d lib -w",
    "dev": "npm run build:watch & lerna run storybook --stream --scope adam-ui-stories",
    "publish": "npm run build && lerna publish",
    "lerna": "lerna",
    "lint": "eslint --fix './packages/**/*.{ts,tsx}'",
    "test": "jest -c ./scripts/jest.config.js --watchAll --env=jsdom --runInBand --coverage && npm run lint",
    "test:ci": "jest -c ./scripts/jest.config.js --env=jsdom --runInBand --coverage --no-cache --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lerna": "^3.16.1",
    "prettier": "^1.18.2",
    "storybook": "^1.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
